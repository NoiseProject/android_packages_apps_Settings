<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/np_settings_title" >

    <PreferenceScreen
        android:key="about_np"
        android:fragment="com.android.settings.np.NoiseAbout"
        android:title="@string/np_menu_about" />

    <PreferenceCategory
        android:key="category_np_personalization"
        android:title="@string/np_menu_personalizaton" >
    
        <PreferenceScreen
            android:key="status_bar_general_category"
            android:fragment="com.android.settings.np.StatusBarSettings"
            android:title="@string/status_bar_screen_title"/>

        <PreferenceScreen
            android:key="navigation_bar_general_category"
            android:fragment="com.android.settings.np.NavigationBarSettings"
            android:title="@string/navigation_bar_screen_title" />
    
        <PreferenceScreen
            android:key="lock_screen_general_category"
            android:fragment="com.android.settings.np.LockScreenSettings"
            android:title="@string/lockscreen_title" />

    </PreferenceCategory>

</PreferenceScreen>
