<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceCategory
        android:key="category_batteryclock_options"
        android:title="@string/display_category_batteryclock_options_title" >

    <PreferenceScreen
        android:fragment="com.android.settings.np.BatterySettings"
        android:key="battery_style_pref"
        android:title="@string/battery_title"
    	android:summary="@string/battery2_summary" />

    <PreferenceScreen
        android:fragment="com.android.settings.np.ClockSettings"
        android:key="clock_settings"
        android:title="@string/status_bar_clock"
    	android:summary="@string/status_bar_clock_summary" />

    </PreferenceCategory>

   <PreferenceCategory
        android:key="category_statusbar_options"
        android:title="@string/display_category_statusbar_options_title" >

    <PreferenceScreen
	    android:key="network_traffic_state"
    	android:fragment="com.android.settings.np.NetworkTraffic"
	    android:summary="@string/network_traffic_summary"
    	android:title="@string/network_traffic_title" />

    </PreferenceCategory>

</PreferenceScreen>
